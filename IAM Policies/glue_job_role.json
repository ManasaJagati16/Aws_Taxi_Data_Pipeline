{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": [
				"glue:StartJobRun",
				"glue:GetJobRuns",
				"glue:GetJobRun",
				"glue:TagResource"
			],
			"Resource": "arn:aws:glue:us-east-1:451702994321:job/nyc_taxi_etl_job"
		},
		{
			"Effect": "Allow",
			"Action": [
				"logs:CreateLogGroup",
				"logs:CreateLogStream",
				"logs:PutLogEvents"
			],
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": "sns:Publish",
			"Resource": "arn:aws:sns:us-east-1:451702994321:glue-failure-topic"
		},
		{
			"Effect": "Allow",
			"Action": [
				"glue:StartCrawler",
				"glue:GetCrawler",
				"glue:GetCrawlerMetrics"
			],
			"Resource": [
				"arn:aws:glue:us-east-1:451702994321:crawler/raw_nyc_taxi_crawler",
				"arn:aws:glue:us-east-1:451702994321:crawler/processed_nyc_taxi_crawler"
			]
		},
		{
			"Effect": "Allow",
			"Action": "lambda:InvokeFunction",
			"Resource": "arn:aws:lambda:us-east-1:451702994321:function:Taxi_data_pipeline"
		}
	]
}